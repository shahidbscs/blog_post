<%= form_for @blog do |f| %>
	<% if @blog.errors.any? %>
		<u>
			<%= pluralize(@blog.errors.count, 'error') %> prevented to save this post
			<% @blog.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</u>
	<% end %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit :submit %>
	</p>
<% end %>